[alias]
  co = checkout
  ci = commit
  cp = cherry-pick
  st = status
  br = branch
  df = diff
  lg = log -p

  # Show the log, with the diff +'s and -'s
  lc = log ORIG_HEAD.. --stat --no-merges

  # The first thing I run on a new project. Who has done the most damage
  who = shortlog -s --

