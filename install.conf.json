[
    {
        "clean": [
            "~",
            "~/.vim/"
        ]
    },
    {
        "link": {
            "~/.vimrc"       : "vimrc",
            "~/.vim/colors"  : "vim/colors",
            "~/.vim/bundle"  : "vim/bundle",
            "~/.gitconfig"   : "gitconfig"
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing/updating submodules"]
        ]
    }
]
